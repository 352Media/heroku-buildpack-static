daemon off;
worker_processes 4;

events {
  use epoll;
  accept_mutex on;
  worker_connections 1024;
}

http {
  gzip on;
  gzip_comp_level 2;
  gzip_min_length 512;

  server_tokens off;

  access_log  logs/access.log;
  error_log   stderr;

  include mime.types;
  default_type application/octet-stream;
  sendfile on;

  #Must read the body in 5 seconds.
  client_body_timeout 5;

  server {
    listen <%= port %>;
    server_name _;
    keepalive_timeout 5;
    root public/;

<% backends.each do |backend| %>
    location <%= backend['mount_point'] %> {
      proxy_pass <%= backend['url'] %>;
    }
<% end %>
  }
}
